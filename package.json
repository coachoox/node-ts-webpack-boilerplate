{
    "name": "ts-webpack-boilerplate",
    "version": "1.0.0",
    "description": "NodeJS, Express, WebPack, ESLint, Prettier and Babel.",
    "author": {
        "name": "Coach OOX",
        "email": "coachmsoox@gmail.com",
        "url": "https://github.com/coachoox"
    },
    "license": "MIT",
    "scripts": {
        "build": "npm run build:server && npm run build:assets",
        "build:server": "babel -d build/ --extensions \".ts\" src",
        "build:assets": "webpack --mode=production",
        "start": "node build/server.js",
        "dev:server": "nodemon",
        "dev:assets": "webpack --mode=development -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/coachoox/node-ts-webpack-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/coachoox/node-ts-webpack-boilerplate/issues"
    },
    "homepage": "https://github.com/coachoox/node-ts-webpack-boilerplate#readme",
    "dependencies": {
        "bcrypt": "5.0.1",
        "connect-mongo": "4.4.1",
        "dotenv": "10.0.0",
        "express": "4.17.1",
        "express-flash": "0.0.2",
        "express-session": "1.17.2",
        "mongoose": "5.12.13",
        "npm": "7.17.0",
        "pug": "3.0.2"
    },
    "devDependencies": {
        "@babel/cli": "7.14.5",
        "@babel/core": "7.14.5",
        "@babel/preset-env": "7.14.5",
        "@babel/preset-typescript": "7.14.5",
