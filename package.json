        "nodemon": "2.0.7",
        "prettier": "2.3.1",
        "sass": "1.34.1",
        "sass-loader": "12.1.0",
        "ts-loader": "9.2.3",
        "ts-node": "10.0.0",
        "webpack": "5.38.1",
        "webpack-cli": "4.7.2"
    }
